<div class="fullh fullw row align-items-center">
  <div class="fullw row justify-content-center my-auto">
    <div class="col-fix">
      <form class="form-signin" method="POST" action="/">

        <h2 class="mb-4 font-weight-bolder text-center">Account Login</h2>

        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="email" id="inputEmail" class="form-control my-4" placeholder="Email address"
          required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control my-4" placeholder="Password"
          required="">

        <div class="row">
          <button class="btn btn-lg btn-outline-dark mx-auto my-4 px-4" type="submit">Sign in</button>
        </div>

      </form>
    </div>
    <p class="mt-3 text-white bg-secondary text-center col-12">{{checkAns}}</p>
  </div>
</div>